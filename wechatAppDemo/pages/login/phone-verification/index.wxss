.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-sizing: border-box;
  padding: 60rpx;
  position: relative;
}

.form-card {
  width: 90%;
  max-width: 600rpx;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.input-field {
  border: 2rpx solid #e5e5e5;
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  color: #333;
  height: 88rpx;
  margin-bottom: 40rpx;
}

.input-field::placeholder {
  padding-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}

.code-row {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.code-input {
  flex: 1;
  margin-right: 20rpx;
}

.send-code-btn {
  top: -20rpx;
  width: 200rpx;
  height: 88rpx;
  border: 2rpx solid #e5e5e5;
  background-color: #fff;
  color: #666;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  margin-left: 20rpx;
  padding: 0;
}

/* 点击反馈 */
.send-code-btn:active {
  background-color: #f5f5f5;
  color: #333;
}

.submit-btn {
  height: 96rpx;
  font-size: 36rpx;
  border-radius: 12rpx;
  margin-top: 40rpx;
}

.back-link {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: #666;
  font-size: 28rpx;
}