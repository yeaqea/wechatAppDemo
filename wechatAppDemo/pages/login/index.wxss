.container {
  padding: 80rpx 60rpx 200rpx; /* 底部留出足够空间给注册链接 */
  background-color: #fff;
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
}

.logo {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo image {
  width: 300rpx;
}

.login-btn {
  margin-top: 80rpx;
  height: 90rpx;
  font-size: 36rpx;
  border-radius: 12rpx;
  background-color: #ccc !important;
  color: #fff;
}

.forgot,
.register-link {
  color: black;
  font-size: 14px;
  text-align: center;
  margin-top: 16rpx;
}

.forgot {
  text-align: left; /* 如果你想靠右对齐 */
}

.register-link {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
}

/* 点击反馈 */
.hover {
  opacity: 0.7;
}