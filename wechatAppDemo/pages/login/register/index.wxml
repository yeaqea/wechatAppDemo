<view class="container">
  <view class="form-card">
    <!-- 手机号（只读） -->
    <van-field
      value="{{ phone }}"
      placeholder="请输入手机号"
      border="{{ false }}"
      disabled="{{ true }}"
      custom-class="input-field phone-disabled"
    />

    <!-- 密码 -->
    <van-field
      value="{{ password }}"
      placeholder="请输入密码"
      type="password"
      border="{{ false }}"
      custom-class="input-field"
      bind:change="onPasswordChange"
    />

    <!-- 确认密码 -->
    <van-field
      value="{{ confirmPassword }}"
      placeholder="再次确认密码"
      type="password"
      border="{{ false }}"
      custom-class="input-field"
      bind:change="onConfirmPasswordChange"
    />

    <!-- 验证码 -->
    <view class="code-row">
      <van-field 
        value="{{ code }}"
        placeholder="请输入验证码"
        border="{{ false }}"
        custom-class="input-field code-input"
        bind:change="onCodeChange"
      />
      <van-button
        type="default"
        size="small"
        custom-class="send-code-btn"
        bind:tap="sendCode"
        >
        发送验证码
      </van-button>
    </view>

    <!-- 注册按钮 -->
    <van-button
      type="info"
      block
      custom-class="submit-btn"
      bind:tap="handleRegister"
    >
      注册
    </van-button>
  </view>

  <!-- 返回登录 -->
  <view class="back-link" bindtap="gotoLogin">返回登录</view>
</view>