.container {
  padding: 20rpx;
  background-color: #f7f7f7;
}

.header {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.history-section {
  margin-top: 40rpx;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-actions {
  display: flex;
  gap: 20rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tags .van-tag {
  margin: 0;
}