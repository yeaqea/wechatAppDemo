/* pages/collection/collection.wxss */
page {
  background: #f7f8fc;
}

.star-container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 30rpx;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 筛选标签 */
.filter-tabs {
  background: white;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-scroll {
  white-space: nowrap;
  width: 100%;
}

.tab-list {
  display: inline-flex;
  padding: 0 30rpx;
}

.tab-item {
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #f8f9fa;
  border-radius: 30rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 文章列表 */
.article-list {
  padding: 20rpx;
}

.article-item {
  display: flex;
  background: white;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  transition: all 0.3s ease;
}

.article-item:active {
  transform: scale(0.98);
}

/* 文章图片 */
.article-image {
  position: relative;
  width: 200rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.article-image image {
  width: 100%;
  height: 100%;
}

.read-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(0,0,0,0.6);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 文章内容 */
.article-content {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.article-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.article-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-right: 20rpx;
}

.article-actions {
  flex-shrink: 0;
}

.action-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collect-icon {
  width: 28rpx;
  height: 28rpx;
}

.article-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.meta-left {
  display: flex;
  align-items: center;
}

.category-tag {
  background: #e6f7ff;
  color: #1890ff;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  margin-right: 16rpx;
}

.read-time {
  font-size: 22rpx;
  color: #999;
}

.collect-date {
  font-size: 22rpx;
  color: #999;
}

.article-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.stats {
  display: flex;
  align-items: center;
}

.stat {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.stat-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
  opacity: 0.6;
}

.stat-text {
  font-size: 22rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  text-align: center;
}

.empty-subtext {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
}

.empty-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
}

.empty-btn:active {
  opacity: 0.8;
}

/* 编辑模式 */
.edit-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 40rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.edit-actions {
  display: flex;
  align-items: center;
  width: 100%;
}

.edit-action {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.edit-action.delete {
  background: #ff4d4f;
  color: white;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

/* 悬浮编辑按钮 */
.floating-edit {
  position: fixed;
  bottom: 120rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  z-index: 1000;
}

.edit-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 编辑模式下的选择框 */
.article-item.edit-mode {
  padding-left: 80rpx;
  position: relative;
}

.select-checkbox {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.select-checkbox.selected {
  background: #667eea;
  border-color: #667eea;
}

.select-checkbox.selected::after {
  content: '✓';
  color: white;
  font-size: 24rpx;
}