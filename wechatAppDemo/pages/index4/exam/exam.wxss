page {
  background: #f7f8fc;
  height: 100vh;
}

.exam-container {
  padding: 20rpx;
  min-height: 100%;
}

/* 标签页样式 */
.tab-bar {
  display: flex;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #1890FF;
  color: #FFFFFF;
  font-weight: 600;
}

/* 考试列表样式 */
.exam-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.exam-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: transform 0.2s;
}

.exam-item:active {
  transform: scale(0.98);
}

.exam-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.exam-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  flex: 1;
  margin-right: 20rpx;
  line-height: 1.4;
}

.exam-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.exam-status.completed {
  background: #F6FFED;
  color: #52C41A;
  border: 1rpx solid #B7EB8F;
}

.exam-status.ongoing {
  background: #FFF7E6;
  color: #FA8C16;
  border: 1rpx solid #FFD591;
}

.exam-status.upcoming {
  background: #F0F5FF;
  color: #1890FF;
  border: 1rpx solid #91D5FF;
}

/* 考试信息样式 */
.exam-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.info-icon {
  width: 28rpx;
  height: 28rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666666;
}

/* 考试底部样式 */
.exam-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-section {
  display: flex;
  align-items: center;
}

.score-text {
  font-size: 26rpx;
  color: #666666;
}

.score-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #1890FF;
}

.action-section {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
  min-width: 140rpx;
  transition: all 0.3s;
}

.action-btn.primary {
  background: #1890FF;
  color: #FFFFFF;
}

.action-btn.primary:active {
  background: #096DD9;
}

.action-btn.secondary {
  background: #F5F5F5;
  color: #666666;
  border: 1rpx solid #D9D9D9;
}

.action-btn.secondary:active {
  background: #E8E8E8;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}