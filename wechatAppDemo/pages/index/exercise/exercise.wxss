/* pages/index/exercise/exercise.wxss */
.container {
  min-height: 100vh;
  background-color: #F5F7FA;
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.type-options {
  width: 100%;
  max-width: 600rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  background-color: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.2s;
}

.type-item.selected {
  background-color: #1677FF;
  color: white;
}

.type-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #E6F7FF;
  color: #1677FF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 20rpx;
  font-weight: bold;
}

.type-item.selected .type-icon {
  background-color: #FFFFFF;
  color: #1677FF;
}

.type-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.type-item.selected .type-label {
  color: white;
}