/* 页面容器 */
.container {
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 44px;
  background-color: #fff;
  border-bottom: 1px solid #f1f1f1;
}

/* 导航项（全部真题/历年真题） */
.nav-item {
  flex: 1; /* 平分宽度 */
  text-align: center;
  font-size: 17px;
  font-weight: 500;
  color: #666; /* 默认文字颜色 */
  padding: 0 10rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 导航项选中状态 */
.nav-item.active {
  color: #1677FF; /* 选中文字颜色 */
  position: relative;
}

/* 选中导航下划线 */
.nav-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  height: 3px;
  background-color: #1677FF;
  border-radius: 3px;
}

/* 提示文字（选择试卷分类开始练习） */
.hint-text {
  padding: 25rpx 30rpx;
  font-size: 26rpx;
  color: #999;
  background-color: #fff;
  border-bottom: 1px solid #f1f1f1;
  margin-bottom: 20rpx;
}

/* 真题列表容器 */
.paper-list {
  padding: 0 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 卡片间距 */
}

/* 真题卡片样式 */
.paper-item {
  background-color: #fff;
  border-radius: 18rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative; /* 用于箭头定位 */
  transition: transform 0.1s ease;
}

/* 卡片点击反馈 */
.paper-item:active {
  transform: scale(0.99);
}

/* 真题标题 */
.paper-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

/* 真题年份信息 */
.paper-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 真题数量 */
.paper-count {
  font-size: 24rpx;
  color: #999;
}

/* 右侧箭头图标 */
.arrow-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 24rpx;
  height: 24rpx;
  color: #ccc;
}

/* 空状态样式（保留，防止无数据时异常） */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}