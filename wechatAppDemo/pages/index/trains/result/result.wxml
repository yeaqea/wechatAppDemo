<!-- pages/index/trains/result/result.wxml -->
<view class="result-container">
  <view class="result-card">
    <view class="result-icon {{scoreRatio >= 0.6 ? 'success' : 'fail'}}">
      <text class="icon">{{scoreRatio >= 0.6 ? '✓' : '✗'}}</text>
    </view>
    
    <view class="result-title">
      <text>{{scoreRatio >= 0.6 ? '恭喜！练习完成' : '继续加油'}}</text>
    </view>
    
    <view class="score-display">
      <text class="score">{{score}}</text>
      <text class="score-divider">/</text>
      <text class="total">{{total}}</text>
    </view>
    
    <view class="score-text">
      <text>正确率: {{accuracy}}%</text>
    </view>
    
    <view class="result-actions">
      <view class="btn review-btn" bindtap="reviewQuestions">
        查看错题
      </view>
      <view class="btn restart-btn" bindtap="restartPractice">
        重新练习
      </view>
      <view class="btn return-btn" bindtap="returnToChapter">
        返回章节
      </view>
    </view>
  </view>
</view>