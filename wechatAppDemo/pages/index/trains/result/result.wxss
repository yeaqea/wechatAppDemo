/* pages/index/trains/result/result.wxss */
.result-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.result-card {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  font-size: 50rpx;
  color: white;
}

.result-icon.success {
  background: #4CAF50;
}

.result-icon.fail {
  background: #f44336;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.score-display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.score {
  font-size: 72rpx;
  font-weight: bold;
  color: #4CAF50;
}

.score-divider {
  font-size: 48rpx;
  color: #666;
  margin: 0 20rpx;
}

.total {
  font-size: 48rpx;
  color: #666;
}

.score-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.result-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn {
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.98);
}

.review-btn {
  background: #ff9800;
  color: white;
}

.restart-btn {
  background: #2196F3;
  color: white;
}

.return-btn {
  background: #9e9e9e;
  color: white;
}