/* pages/index/trains/practice/practice.wxss */
.practice-container {
  min-height: 100vh;
  background: #f5f5f5;
  position: relative;
}

.progress-header {
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.chapter-text {
  font-size: 24rpx;
  color: #666;
}

.progress-bar {
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #4CAF50;
  transition: width 0.3s ease;
}

.question-area {
  padding: 40rpx 30rpx;
}

.question-content {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.question-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
}

.options-area {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.option-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: white;
  transition: all 0.3s ease;
  position: relative;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background: #f8f8f8;
}

/* 选中状态 */
.option-item.selected {
  background: rgba(76, 175, 80, 0.05);
  border-left: 4rpx solid #4CAF50;
}

/* 正确状态 */
.option-item.correct {
  background: rgba(76, 175, 80, 0.1);
  border-left: 4rpx solid #4CAF50;
}

/* 错误状态 */
.option-item.wrong {
  background: rgba(244, 67, 54, 0.1);
  border-left: 4rpx solid #f44336;
}

.option-label {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.option-item.selected .option-label {
  background: #4CAF50;
  color: white;
}

.option-item.correct .option-label {
  background: #4CAF50;
  color: white;
}

.option-item.wrong .option-label {
  background: #f44336;
  color: white;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.option-status {
  margin-left: 20rpx;
}

.icon-correct {
  color: #4CAF50;
  font-size: 32rpx;
  font-weight: bold;
}

.icon-wrong {
  color: #f44336;
  font-size: 32rpx;
  font-weight: bold;
}

.practice-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #eee;
}

.btn {
  padding: 25rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.3s ease;
}

.btn:active {
  transform: scale(0.98);
}

.submit-btn {
  background: #ccc;
  color: white;
}

.submit-btn.active {
  background: #4CAF50;
}

.next-btn {
  background: #2196F3;
  color: white;
}

/* 答案反馈样式 */
.answer-feedback {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 120rpx;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  z-index: 999;
}

.answer-feedback.show {
  opacity: 1;
  visibility: visible;
}

.feedback-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  transform: translateY(50rpx);
  transition: all 0.3s ease;
}

.answer-feedback.show .feedback-content {
  transform: translateY(0);
}

.feedback-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  flex-shrink: 0;
}

.feedback-icon.correct {
  background: #4CAF50;
}

.feedback-icon.wrong {
  background: #f44336;
}

.feedback-text {
  flex: 1;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.feedback-desc {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.feedback-explanation {
  font-size: 26rpx;
  color: #888;
  line-height: 1.5;
  display: block;
}