.container {
  padding: 30rpx;
  background-color: #e6f7ff;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 120rpx; /* 留出Tab栏空间 */
}

/* 错题统计圆形样式 */
.error-count {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}
.count-circle {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(#2f5496, #2f5496);
  display: flex;
  justify-content: center;
  align-items: center;
}
.count-text {
  text-align: center;
  color: #fff;
}
.count-number {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
}
.count-label {
  font-size: 28rpx;
  display: block;
}

/* 按钮组样式（实现点击切换颜色） */
.btn-group {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}
.btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: 1rpx solid #2f5496;
}
/* 激活状态（蓝色背景+白色文字） */
.btn.active {
  background-color: #2f5496;
  color: #fff;
  border: none;
}
/* 未激活状态（白色背景+蓝色文字） */
.btn:not(.active) {
  background-color: #fff;
  color: #2f5496;
}

/* 错题内容区域 */
.error-content {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  max-height: 500rpx;
  overflow-y: auto;
}
/* 错题项样式 */
.error-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.error-item:last-child {
  border-bottom: none;
}
.error-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.error-type {
  font-size: 24rpx;
  color: #2f5496;
  background-color: #e6f7ff;
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
}
.error-time {
  font-size: 22rpx;
  color: #999;
}
.error-question {
  font-size: 26rpx;
  margin-bottom: 16rpx;
  line-height: 1.5;
}
.error-answer {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}
.answer-label {
  color: #666;
  margin-right: 10rpx;
}
.your-answer {
  color: #ff4d4f;
}
.correct-answer {
  color: #52c41a;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}
.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}
.empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 题型练习标题 */
.type-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 题型列表样式 */
.type-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.type-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.type-item:last-child {
  border-bottom: none;
}
.type-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #66b1ff;
  margin-right: 20rpx;
}
.type-name {
  flex: 1;
  font-size: 28rpx;
}
.arrow {
  font-size: 32rpx;
  color: #ccc;
}

/* 底部Tab栏样式 */
.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #f5f5f5;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 20%;
  height: 100%;
}
.tab-item.active {
  color: #2f5496;
}
.tab-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}
.tab-item text {
  font-size: 20rpx;
}