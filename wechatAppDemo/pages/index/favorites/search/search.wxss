.search-page {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding: 15rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 60rpx;
  padding: 18rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.search-icon {
  margin-right: 15rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0;
}

.clear-btn {
  background: none;
  border: none;
  padding: 0 5rpx;
}

.result-area {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  min-height: calc(100vh - 150rpx);
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 0;
  color: #999;
  font-size: 28rpx;
}

.no-result {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.result-list {
  gap: 15rpx;
  display: flex;
  flex-direction: column;
}

.result-item {
  padding: 20rpx 10rpx;
  border-bottom: 1px solid #f5f5f5;
}

.result-question {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.result-time {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}