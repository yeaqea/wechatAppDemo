/* 页面容器 */
.container {
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 44px;
  background-color: #fff;
  padding: 0 15px;
  border-bottom: 1px solid #f1f1f1;
}

.back-btn {
  width: 30px;
  height: 44px;
  display: flex;
  align-items: center;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: 500;
  color: #333;
}

.edit-btn {
  font-size: 15px;
  color: #1a6dff;
  padding: 0 10px;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 60rpx;
  padding: 18rpx 24rpx;
  margin: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: background-color 0.2s;
}

.search-bar:active {
  background-color: #f5f5f5;
}

.search-icon {
  color: #999;
  margin-right: 15rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 编辑工具栏 */
.edit-toolbar {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 15rpx 20rpx;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.toolbar-item {
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #1a6dff;
}

.empty-image {
  width: 200rpx;      /* 可根据需要调整 */
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;       /* 可选：增加透明度更柔和 */
}

/* 收藏列表 */
.favorites-list {
  padding: 0 15px;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.favorite-item {
  background-color: #fff;
  border-radius: 18rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  display: flex;
  align-items: center;
}

.favorite-item.editable {
  padding-left: 10rpx;
}

/* 自定义复选框 */
.custom-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #ccc;
  border-radius: 6rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  transition: all 0.2s;
}

.custom-checkbox.checked {
  background-color: #1a6dff;
  border-color: #1a6dff;
}

.delete-btn {
  background-color: #ff4d4f;
  color: white !important;
}

.delete-text {
  color: white !important;
}

.checkmark {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

.question-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-left: 20rpx;
}

.question-text {
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.add-time {
  font-size: 24rpx;
  color: #999;
}