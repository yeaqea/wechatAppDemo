/* 页面容器 */
.container {
  background-color: #f7f7f7;
  min-height: 100vh;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  height: 44px;
  background-color: #fff;
  padding: 0 15px;
  border-bottom: 1px solid #f1f1f1;
}

.back-btn {
  width: 30px;
  height: 44px;
  display: flex;
  align-items: center;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 17px;
  font-weight: 500;
  color: #333;
}

/* 搜索栏（可点击样式） */
.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 60rpx;
  padding: 18rpx 24rpx;
  margin: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: background-color 0.2s;
}

.search-bar:active {
  background-color: #f5f5f5;
}

.search-icon {
  color: #999;
  margin-right: 15rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* 收藏列表 */
.favorites-list {
  padding: 0 15px;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 200rpx 0;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.favorite-item {
  background-color: #fff;
  border-radius: 18rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.question-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.add-time {
  font-size: 24rpx;
  color: #999;
}