.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  padding-bottom: 140rpx;
}

/* 头部时间 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.time {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}

/* 试题内容 */
.exam-content {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 题目区域 */
.question-section {
  margin-bottom: 40rpx;
}

.question-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 40rpx;
  font-weight: 500;
}

/* 选项列表 */
.options-list {
  margin-bottom: 30rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 28rpx 30rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.option-item:active {
  background: #e9ecef;
}

.option-item.selected {
  background: #e3f2fd;
  border-color: #1a6dff;
}

.option-item.correct {
  background: #e8f5e8;
  border-color: #4caf50;
}

.option-item.wrong {
  background: #ffebee;
  border-color: #f44336;
}

.option-label {
  width: 60rpx;
  height: 60rpx;
  background: white;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.option-item.selected .option-label {
  background: #1a6dff;
  color: white;
  border-color: #1a6dff;
}

.option-item.correct .option-label {
  background: #4caf50;
  color: white;
  border-color: #4caf50;
}

.option-item.wrong .option-label {
  background: #f44336;
  color: white;
  border-color: #f44336;
}

.option-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.option-status {
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 16rpx;
}

.option-item.correct .option-status {
  color: #4caf50;
}

.option-item.wrong .option-status {
  color: #f44336;
}

/* 解析区域 */
.analysis-section {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  border-left: 6rpx solid #1a6dff;
}

.analysis-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.analysis-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.nav-btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.prev-btn {
  background: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.next-btn {
  background: #1a6dff;
  color: white;
}

.nav-btn:not(.disabled):active {
  transform: scale(0.98);
}

.nav-btn.disabled {
  background: #f8f9fa;
  color: #ccc;
  border-color: #f8f9fa;
}

.progress {
  text-align: center;
}
/* 收藏按钮样式 */
.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
  margin-left: 20rpx;
}
.progress-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}