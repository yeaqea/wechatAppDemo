
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f7fa;
  box-sizing: border-box;
  padding: 0 40rpx;
  padding-top: 200rpx; 
  position: relative;
}

.form-card {
  width: 100%;
  max-width: 600rpx;
  padding: 60rpx 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
  margin: 0 auto;
}

/* 输入框通用样式 */
.input-field {
  border: 2rpx solid #e5e5e5;
  background-color: #fafafa;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  color: #333;
  height: 88rpx;
  margin-bottom: 60rpx; 
}

.input-field::placeholder {
  color: #999;
  font-size: 28rpx;
}

.phone-disabled {
  background-color: #f5f5f5;
  color: #666;
}

.code-row {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx; 
}

.code-input {
  flex: 1;
  padding-right: 24rpx;
}

.send-code-btn {
  top: -30rpx;
  width: 200rpx;
  height: 88rpx;
  border: 2rpx solid #e5e5e5;
  background-color: #fff;
  color: #666;
  border-radius: 12rpx;
  font-size: 24rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  margin-left: 20rpx;
  padding: 0;
}

/* 提交按钮 */
.submit-btn {
  height: 96rpx;
  font-size: 36rpx;
  border-radius: 12rpx;
}

/* 返回链接固定在底部 */
.back-link {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  color: #666;
  font-size: 28rpx;
}