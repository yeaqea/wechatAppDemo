.article-detail {
  padding: 30rpx;
  padding-bottom: 100rpx;
}
.article-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  line-height: 1.5;
}
.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  color: #666;
  font-size: 24rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}
.author-info {
  display: flex;
  align-items: center;
}
.author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 10rpx;
}
.author-avatar image {
  width: 100%;
  height: 100%;
}
.author-name {
  font-weight: 500;
}
.publish-info {
  display: flex;
  align-items: center;
}
.publish-time {
  margin-right: 20rpx;
}
.view-count {
  display: flex;
  align-items: center;
}

/* 收藏按钮样式 */
.collect-btn-container {
  margin: 30rpx 0;
  display: flex;
  justify-content: center;
}

.collect-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.collect-btn.collected {
  background: #fff2f0;
  border-color: #ff4d4f;
  color: #ff4d4f;
}

.collect-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.article-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-line;
}