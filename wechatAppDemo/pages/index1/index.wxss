/* 搜索栏 */
.search-bar {
  padding: 10rpx 30rpx;
  background-color: #f5f5f5;
}
.search-bar input {
  width: 100%;
  height: 60rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

/* 分类&排序栏 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  position: relative;
  z-index: 100;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  border-radius: 8rpx;
  background-color: #f8f9fa;
  font-size: 28rpx;
}

.filter-item:active {
  background-color: #e9ecef;
}

.arrow-down {
  width: 12rpx;
  height: 12rpx;
  margin-left: 10rpx;
  border-left: 2rpx solid #666;
  border-bottom: 2rpx solid #666;
  transform: rotate(-45deg);
  transition: transform 0.3s;
}

.arrow-up {
  transform: rotate(135deg);
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 120rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 200;
  min-width: 200rpx;
}

.category-dropdown {
  left: 30rpx;
}

.sort-dropdown {
  right: 30rpx;
}

.dropdown-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 28rpx;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item.active {
  color: #007bff;
  background-color: #f8f9fa;
}

.dropdown-item:active {
  background-color: #f0f0f0;
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
  z-index: 150;
}

/* 文章列表项 */
.article-list {
  padding: 20rpx;
}

.article-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.article-info {
  margin-bottom: 20rpx;
}

.article-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.article-tags {
  display: flex;
  margin-bottom: 10rpx;
  flex-wrap: wrap;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.article-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.article-thumbnail {
  width: 200rpx;
  height: 140rpx;
  align-self: flex-end;
  border-radius: 12rpx;
  overflow: hidden;
}

.article-thumbnail image {
  width: 100%;
  height: 100%;
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
}

.author-avatar image {
  width: 100%;
  height: 100%;
}

.author-info {
  margin-left: 10rpx;
  flex: 1;
}

.author-name {
  margin-bottom: 4rpx;
  color: #333;
}

.publish-time {
  font-size: 22rpx;
}

.view-count {
  display: flex;
  align-items: center;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}