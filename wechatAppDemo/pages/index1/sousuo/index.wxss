/* wechatAppDemo/pages/sousuo/index.wxss */
.search-container {
  padding: 20rpx;
}

.search-box {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
}
.search-btn {
  background: blue;
  color: #f5f5f5;
}


.cancel-btn::after {
  border: none;
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-history {
  font-size: 26rpx;
  color: #999;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.history-tag {
  background: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-item .result-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}