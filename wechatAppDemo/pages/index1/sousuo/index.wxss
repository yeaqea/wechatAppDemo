/* wechatAppDemo/pages/sousuo/index.wxss */
.search-container {
  padding: 20rpx;
  background-color: #fff;
  min-height: 100vh;
}

.search-box {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
}

.cancel-btn {
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: none;
  color: #333;
  font-size: 28rpx;
  padding: 0;
}

.history-title, .result-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.history-tag {
  background-color: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
}

.result-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.result-desc {
  font-size: 26rpx;
  color: #666;
}